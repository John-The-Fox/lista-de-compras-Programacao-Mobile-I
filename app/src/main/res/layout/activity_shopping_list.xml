<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#fcedc7">

    <!-- Título da Tela -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listas de Compras"
        android:textSize="32sp"
        android:textColor="#914f39"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Campo de pesquisa -->
    <EditText
        android:id="@+id/etSearchList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar listas de compras"
        android:padding="12dp"
        android:background="@drawable/rounded_corner_pastel_green"
        android:layout_marginBottom="8dp"/>

    <!-- RecyclerView para exibir as listas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewShoppingLists"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"/>

    <ImageButton
        android:id="@+id/btnEditList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:contentDescription="Editar Lista"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginEnd="8dp"/>

    <!-- Botão para adicionar nova lista de compras -->
    <Button
        android:id="@+id/btnAddShoppingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Nova Lista"
        android:backgroundTint="#f25050"
        android:textColor="#FFFFFF"/>
</LinearLayout>
